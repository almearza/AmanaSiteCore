<!--// Page Wrapper Start //-->
@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization;
@inject IViewLocalizer Localizer

@{
    var secBg = Url.Content("~/img/bg/baladya-sec-img.png");
    var lang = CultureInfo.CurrentCulture;
}
<div class="page-wrapper" id="wrapper">
    <!--// Main Area Start //-->
    <main class="main-area">
        <!--// Breadcrumb Section Start //-->
        <section class="breadcrumb-section section" data-scroll-index="1" data-bg-image-path="@secBg">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">

                    </div>
                </div>
            </div>
        </section>
        <!--// Breadcrumb Section end //-->
        <div id="DetialsPage">
            <div class="div-details">
                <div class="div-header">
                    <a href="~/"><i class="fa fa-home"></i></a>
                    @if (lang.ToString() == "en")
                    {
                        <i class="fa fa-chevron-circle-right"></i>
                    }
                    else
                    {
                        <i class="fa fa-chevron-circle-left"></i>
                    }
                    <p>@Localizer["OpenData"]</p>
                </div>
                <div class="div-top-lable">
                    <i class="fa fa-database"></i>
                    <span>@Localizer["OpenDataDetails"]</span>
                    <div class="top-left-icon">
                        <a href="https://www.facebook.com/sharer/sharer.php?u=" title='@Localizer["FacebookSharing"]'
                            target="_blank" id="facebook-sharing">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://twitter.com/intent/tweet?text=" title='@Localizer["TwitterSharing"]'
                            target="_blank" id="twitter-sharing">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </div>
                </div>
                <div class="page-details">
                    <div class="news-saved-img">
                        <img src="~/img/bg/open-data.png" alt="aboutus">
                    </div>
                    <div class="text-justify">
                        <h6>@Localizer["T1"]</h6>
                        <small>
                            @Localizer["P1"]
                        </small>
                    </div>
                    <div class="text-justify">
                        <h6>@Localizer["T2"]</h6>
                        <small>
                            @Localizer["P2"]
                        </small>
                    </div>
                    <div class="text-justify">
                        <h6>@Localizer["T3"]</h6>
                        <small>
                            @Localizer["P3"]
                        </small>
                    </div>
                    <div class="text-justify">
                        <h6>@Localizer["T4"]</h6>
                        <small>
                            @Localizer["P4"]
                        </small>
                    </div>
                    <div class="text-justify">
                        <small>
                            @Localizer["P5"]
                        </small>
                    </div>
                    <table class="table table-bordered" style="text-align: center;">
                        <tbody>
                            <tr>
                                <td style="text-align: center; ">@Localizer["Th1"]<br></td>
                                <td style="text-align: center;">PDF</td>
                                <td style="text-align: center;">XLS</td>
                            </tr>
                            <tr>
                                <td style="text-align: center;">@Localizer["Lics"]</td>
                                <td style="text-align: center;">
                                    <p><a href="~/pdfs/statisticsofshopslicenses3years.pdf"
                                            target="_blank">@Localizer["Show"]</a><br></p>
                                </td>
                                <td style="text-align: center;">
                                    <p><a href="~/pdfs/statisticsofshopslicenses3years.xls"
                                            target="_blank">@Localizer["Show"]</a><br></p>
                                </td>
                            </tr>
                            <tr>
                                <td style="text-align: center;">@Localizer["Lics2"]<br></td>
                                <td style="text-align: center;">
                                    <p><a href="~/pdfs/statisticsofbuildinglicenses3years.pdf"
                                            target="_blank">@Localizer["Show"]</a><br></p>
                                </td>
                                <td style="text-align: center;">
                                    <p><a href="~/pdfs/statisticsofbuildinglicenses3years.xls"
                                            target="_blank">@Localizer["Show"]</a><br></p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>



    </main>
    <!--// Main Area End //-->
</div>
<!--// Page Wrapper End //-->