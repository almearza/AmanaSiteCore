                                data-adapt-container-width="true" data-hide-cover="true" data-show-facepile="true">
                                <blockquote cite="https://www.facebook.com/AmanaAlmadinah"
                                    class="fb-xfbml-parse-ignore">
                                    <a href="https://www.facebook.com/AmanaAlmadinah">@Localizer["AmanaTitle"]â€Ž</a>
                                </blockquote>
                            </div>
                    </div>
                </div>
            </div>

              <div class="item">
                <div class="blog-item">
                    <div class="blog-body">
                        <h5>@Localizer["Twitter"]</h5>
                        <div style="max-height: 350px; overflow-y: auto;">
                            <p>
                                <a class="twitter-timeline"
                                    href="https://twitter.com/AmanaAlmadinah?ref_src=twsrc%5Etfw">
                                    @Localizer["Twittes"]
                                </a>
                                <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                            </p>
                        </div>
                    </div>
                </div>
            </div>


        </div>
</section>
