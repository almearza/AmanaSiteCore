        <div class="row">
            <div class="col-md-6">
                <div class="section-heading-left white-header">
                    <h2>@Localizer["Media"]</h2>
                </div>
            </div>
        </div>
        <div class="owl-carousel owl-theme" id="blogCarousel2">

            <div class="item">
                <div class="blog-item">
                    <div class="blog-body">
                        <h5>@Localizer["Facebook"]</h5>
                        
