<!--// Page Wrapper Start //-->
@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization;
@inject IViewLocalizer Localizer
@{
    var secBg = Url.Content("~/img/bg/survey-sec-img.png");
    var lang = CultureInfo.CurrentCulture;
    ViewBag.Title=Localizer["Survey"];
}
@section styles{
<style>
    .donot-trans {
        -webkit-transform: none !important;
        transform: none !important;
    }
</style>
}
@model SurveyVM
<div class="page-wrapper" id="wrapper">
    <!--// Main Area Start //-->
    <main class="main-area ">
        <!--// Breadcrumb Section Start //-->
        <section class="breadcrumb-section section" data-scroll-index="1" data-bg-image-path="@secBg">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">

                    </div>
                </div>
            </div>
        </section>
        <!--// Breadcrumb Section end //-->
        <div id="DetialsPage">
            <div class="div-details">
                <div class="div-header">
                    <a href="~/"><i class="fa fa-home"></i></a>
                    @if (lang.ToString() == "en")
                    {
                        <i class="fa fa-chevron-circle-right"></i>
                    }
                    else
                    {
                        <i class="fa fa-chevron-circle-left"></i>
                    }
                    <p>@Localizer["SurveyDesc"]</p>
                </div>
                <div class="div-top-lable">
                    <i class="fa fa-university"></i>
                    <span>@ViewBag.Title</span>
                    <div class="top-left-icon">
                         <a  href="https://www.facebook.com/sharer/sharer.php?u="  title='@Localizer["FacebookSharing"]' target="_blank" id="facebook-sharing">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://twitter.com/intent/tweet?text=" title='@Localizer["TwitterSharing"]' target="_blank" id="twitter-sharing">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </div>
                </div>
                <div class="page-details">
                    <!--// Resume Section Start //-->
                    <section class="section pb-minus-76">
                        <div class="container">
                            <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="contact-form-wrap">
                                <form id="contactForm">
                                    <div class="row">
                                          <div class="col-md-12">
                                            <hr>
                                            <p>يرجى السماح لنا بدقيقة من وقتك، هذا استطلاع رأي لقياس صوت العميل والعمل لتحسين جودة الخدمات المقدمة من الأمانة شاكرين تعاونكم لما فيه المصلحة العامة.</p>
                                            <hr>
                                        </div>
                                         <div class="col-md-12">
                                            <div class="contact-form-group custom-select-wrapper">
                                                <select name="contact_subject" class="form-control" id="contactSubject">
                                                    <option value="Please Select">الموضوع</option>
                                                    <option value="Sales">إقتراح</option>
                                                    <option value="Services">شكوى</option>
                                                    <option value="Support">أخرى</option>
                                                </select>
                                            </div>
                                        </div>
                                         <div class="col-md-12">
                                            <div class="contact-form-group">
                                                <textarea name="contact_message" id="contactMessage" class="form-control"  placeholder="الرسالة *" cols="20" rows="8"></textarea>
                                                <div class="form-validate-icons">
                                                    <span></span>
                                                </div>
                                            </div>
                                        </div>
                                      
                                        <div class="col-md-6">
                                            <div class="contact-form-group">
                                                <input type="text" class="form-control" name="contact_name" id="contactName" placeholder="الإسم  *">
                                                <div class="form-validate-icons">
                                                    <span></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="contact-form-group">
                                                <input type="text" class="form-control" name="contact_phone" id="contactPhone" placeholder="رقم الجوال *">
                                                <div class="form-validate-icons">
                                                    <span></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="contact-form-group">
                                                <input type="text" class="form-control" name="contact_email" id="contactEmail" placeholder="البريد الإلكتروني *">
                                                <div class="form-validate-icons">
                                                    <span></span>
                                                </div>
                                            </div>
                                        </div>
                                       <div class="col-md-6" style="text-align: end;">
                                            <div class="contact-btn-left">
                                                <button type="submit" id="contactBtn" class="primary-btn">
                                                    <span class="text">إرســــــــال</span>
                                                    <span class="icon"><i class="fa fa-arrow-right"></i></span>
                                                </button>
                                            </div>
                                       </div>
                                       
                                        <div class="col-md-12 text-center">
                                            <div class="form-alerts">
                                                <div class="empty-form text-center" style="display: none;"><span>من فضلك أدخل الحقول المطلوبة</span></div>
                                                <div class="terms-alert text-center" style="display: none;"><span>رجاء وافق على الشروط</span></div>
                                                <div class="subject-alert text-center" style="display: none;"><span>فضلا إختار الموضوع</span></div>
                                                <div class="security-alert text-center" style="display: none;"><span>رمز الامان غير صحيح !</span></div>
                                                <div class="email-invalid text-center" style="display: none;"><span>فضلا إدخل بريد صحيح.مثلا. example@gmail.com</span></div>
                                                <div class="phone-invalid text-center" style="display: none;"><span>فضلا ادخل رقم جوال صحيح مثلا. 200-255-4444</span></div>
                                            </div>
                                           
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                        </div>
                    </section>
                    <!--// Resume Section End //-->
                </div>
            </div>
        </div>



    </main>
    <!--// Main Area End //-->
</div>



