<!--// Page Wrapper Start //-->
@using Microsoft.AspNetCore.Mvc.Localization;
@using System.Globalization;
@using AmanaSite.Interfaces;
@inject IViewLocalizer Localizer;
@inject IUnitOfWork unitOfWork;
@{
    var _survey = unitOfWork.Survey;
    var secBg = Url.Content("~/img/bg/survey-sec-img.png");
    var lang = CultureInfo.CurrentCulture;
    ViewBag.Title=Localizer["SurveyDesc"];
}
@section styles{
<style>
    .donot-trans {
        -webkit-transform: none !important;
        transform: none !important;
    }
</style>
}
@model SurveyVM
<div class="page-wrapper" id="wrapper">
    <!--// Main Area Start //-->
    <main class="main-area ">
        <!--// Breadcrumb Section Start //-->
        <section class="breadcrumb-section section" data-scroll-index="1" data-bg-image-path="@secBg">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">

                    </div>
                </div>
            </div>
        </section>
        <!--// Breadcrumb Section end //-->
        <div id="DetialsPage">
            <div class="div-details">
                <div class="div-header">
                    <a href="~/"><i class="fa fa-home"></i></a>
                    @if (lang.ToString() == "en")
                    {
                        <i class="fa fa-chevron-circle-right"></i>
                    }
                    else
                    {
                        <i class="fa fa-chevron-circle-left"></i>
                    }
                    <p>@Localizer["Survey"]</p>
                </div>
                <div class="div-top-lable">
                    <i class="fas fa-poll"></i>
                    <span>@ViewBag.Title</span>
                    <div class="top-left-icon">
                         <a  href="https://www.facebook.com/sharer/sharer.php?u="  title='@Localizer["FacebookSharing"]' target="_blank" id="facebook-sharing">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="https://twitter.com/intent/tweet?text=" title='@Localizer["TwitterSharing"]' target="_blank" id="twitter-sharing">
                            <i class="fab fa-twitter"></i>
                        </a>
                    </div>
                </div>
                <div class="page-details">
                    <!--// Resume Section Start //-->
                    <section class="section pb-minus-76">
                        <div class="container">
                        <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="contact-form-wrap">
                                    <div class="row d-block">
                                          <div class="col-md-12">
                                            <hr>
                                            <p>يرجى السماح لنا بدقيقة من وقتك، هذا استطلاع رأي لقياس صوت العميل والعمل لتحسين جودة الخدمات المقدمة من الأمانة شاكرين تعاونكم لما فيه المصلحة العامة.</p>
                                            <hr>
                                        </div>
                                        @using (Html.BeginForm("Save", "Survey", FormMethod.Post,new {@style="padding:10px;"})){
                                        var _surveySetting = await _survey.GetSettingAsync();
                                        <div class="col-md-12"><p>العمر</p></div>
                                        <div class="mb-5 col-12">
                                            @foreach(var ageRange in _surveySetting.SAges){
                                            <div class="col-3 m-2 text-justify btn btn-primary">
                                                 <span>@Html.RadioButtonFor(m => m.SAgeId, ageRange.Id) @ageRange.AgeRange</span>
                                                    <div class="form-validate-icons">
                                                    @Html.ValidationMessageFor(m=>m.SAgeId)
                                                </div>
                                            </div>
                                             }
                                        </div>
                                         <div class="col-md-12">
                                            <div class="contact-form-group custom-select-wrapper">
                                                @Html.DropDownListFor(m=>m.SNatId,new SelectList(_surveySetting.SGenders,"Id","Gender"),"الجنس",new{@class="form-control"})
                                                <div class="form-validate-icons">
                                                        @Html.ValidationMessageFor(m=>m.SGenderId)
                                                </div>
                                            </div>
                                        </div>
                                       
                                       
                                        <div class="col-md-12"><p>الجنسية</p></div>
                                        <div class="mb-5 col-12">
                                            @foreach(var gender in _surveySetting.SNats){
                                            <div class="col-3 m-2 text-justify btn btn-primary">
                                                 <span>@Html.RadioButtonFor(m => m.SNatId, gender.Id) @gender.Nationalty</span>
                                                    <div class="form-validate-icons">
                                                    @Html.ValidationMessageFor(m=>m.SNatId)
                                                </div>
                                            </div>
                                             }
                                        </div>
                                        <div class="col-md-12"><p>ماهي الصفة التي تراجع بها الأمانة؟</p></div>
                                        <div class="mb-5 col-12">
                                            @foreach(var radioBtn in _surveySetting.SRefTypes){
                                            <div class="col-3 m-2 text-justify btn btn-primary">
                                                 <span>@Html.RadioButtonFor(m => m.SRefTypeId, radioBtn.Id) @radioBtn.ReferenceName</span>
                                                    <div class="form-validate-icons">
                                                    @Html.ValidationMessageFor(m=>m.SRefTypeId)
                                                </div>
                                            </div>
                                             }
                                        </div>
                                        <div class="col-md-12">
                                            <div class="contact-form-group custom-select-wrapper">
                                                @Html.DropDownListFor(m=>m.SVisitAvgId,new SelectList(_surveySetting.SurveyVisitAvgs,"Id","VisitAvg"),"ما هو متوسط زيارتك للأمانة أسبوعيا؟",new{@class="form-control"})
                                                <div class="form-validate-icons">
                                                        @Html.ValidationMessageFor(m=>m.SVisitAvgId)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="contact-form-group custom-select-wrapper">
                                                @Html.DropDownListFor(m=>m.SEvalEmpId,new SelectList(_surveySetting.SEvalEmps,"Id","Evaluate"),"ما هو متوسط زيارتك للأمانة أسبوعيا؟",new{@class="form-control"})
                                                <div class="form-validate-icons">
                                                        @Html.ValidationMessageFor(m=>m.SEvalEmpId)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="contact-form-group custom-select-wrapper">
                                                @Html.DropDownListFor(m=>m.STransTypeId,new SelectList(_surveySetting.STransTypes,"Id","TransactionType"),"ماهو تصنيف المعاملة التي تراجع من أجلها ؟",new{@class="form-control"})
                                                <div class="form-validate-icons">
                                                        @Html.ValidationMessageFor(m=>m.STransTypeId)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12"><p>ما هو معدل التقدم في انجاز معاملتك عند كل مراجع؟</p></div>
                                        <div class="mb-5 col-12">
                                            @foreach(var radioBtn in _surveySetting.STRanComps){
                                            <div class="col-3 m-2 text-justify btn btn-primary">
                                                 <span>@Html.RadioButtonFor(m => m.STRanCompId, radioBtn.Id) @radioBtn.TransactionCompletion</span>
                                                    <div class="form-validate-icons">
                                                    @Html.ValidationMessageFor(m=>m.STRanCompId)
                                                </div>
                                            </div>
                                             }
                                        </div>
                                        <div class="col-md-12">
                                            <div class="contact-form-group">
                                                @Html.TextAreaFor(m => m.Note,8,20,new{@class="form-control"  ,@placeholder="ملاحظات/ مرئيات/ مقترحات"})
                                                <div class="form-validate-icons">
                                                   @Html.ValidationMessageFor(m=>m.Note)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12" style="text-align: end;">
                                                <button type="submit" class="primary-btn">
                                                    <span class="text">إرســــــــال</span>
                                                    <span class="icon"><i class="fa fa-arrow-right"></i></span>
                                                </button>
                                       </div>
                                        }
                                    
                                       
                                       
                                    </div>
                            </div>
                        </div>
                    </div>
                        </div>
                    </section>
                    <!--// Resume Section End //-->
                </div>
            </div>
        </div>



    </main>
    <!--// Main Area End //-->
</div>



